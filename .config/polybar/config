format-full-prefix = "Óà∫ "
format-full-prefix-foreground = #a1a1a1
format-full-underline = #802c2c2c

ramp-capacity-0 = Óà∂
ramp-capacity-1 = Óà∑
ramp-capacity-2 = Óà∏
